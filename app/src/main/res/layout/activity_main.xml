<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/textviewForLogoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonActivity"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="#d0d0d0"
        android:maxLines="200"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/buttonActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_activity" />

    <Button
        android:id="@+id/buttonLogLeeren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textviewForLogoutput"
        android:layout_alignTop="@+id/buttonActivity"
        android:layout_toRightOf="@+id/buttonActivity"
        android:text="@string/button_loeschen" />

</RelativeLayout>